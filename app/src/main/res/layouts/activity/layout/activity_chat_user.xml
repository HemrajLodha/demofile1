<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/card_filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_select_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_background_sqaure"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/title_class"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_select_student"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_background_sqaure"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/title_student"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.base.ui.view.BaseRecyclerView
            android:id="@+id/rv_chat_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/card_filter"
            android:background="@color/bg" />

        <com.pws.pateast.widget.ServerResponseView
            android:id="@+id/response_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <include
            layout="@layout/progressbar"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>