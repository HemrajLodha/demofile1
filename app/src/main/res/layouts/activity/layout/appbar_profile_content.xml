<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_4"
    android:layout_marginEnd="@dimen/size_8"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginStart="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:background="@drawable/dashboard_card_top_bottom_bg"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_right_padding"
        android:paddingLeft="@dimen/list_right_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_left_padding"
        android:weightSum="1">


        <com.pws.pateast.widget.ProfileImageView
            android:id="@+id/img_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/user_placeholder"
            app:civ_border_color="@color/student_form_color_purple"
            app:civ_border_width="@dimen/size_2"
            app:ratio="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="@dimen/list_right_padding"
            android:paddingStart="@dimen/list_right_padding">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Camroon Charter"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shape_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:gravity="center"
                    android:text="@string/fa_phone"
                    android:textColor="@color/textColorFont"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:gravity="center"
                    android:text="@string/fa_institute"
                    android:textColor="@color/textColorFont"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_institute_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:gravity="center"
                    android:text="@string/fa_envelope_o"
                    android:textColor="@color/textColorFont"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
