<com.pws.pateast.widget.RectangleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assignment_view"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/colorAccentParent"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:layout_constraintStart_toEndOf="@+id/profile_view"
    app:layout_constraintEnd_toEndOf="parent"
    app:ratio="1.4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_centerHorizontal="true"
            android:src="@drawable/assignment_parent" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5"
            android:ellipsize="end"
            android:fontFamily="@string/font_sans_serif_medium"
            android:maxLines="1"
            android:text="@string/dashboard_title_assignment"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/text_size_v_medium" />

    </RelativeLayout>
</com.pws.pateast.widget.RectangleRelativeLayout>
