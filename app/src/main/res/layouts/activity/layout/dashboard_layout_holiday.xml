<com.pws.pateast.widget.RectangleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bus_track_view"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryStudent"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/message_view"
    app:layout_constraintTop_toBottomOf="@+id/profile_view"
    app:ratio="1.4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dashboard_holidays" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="@string/menu_holidays"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/text_size_v_medium" />
    </RelativeLayout>
</com.pws.pateast.widget.RectangleRelativeLayout>
