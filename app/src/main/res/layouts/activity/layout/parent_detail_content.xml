<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16">

        <com.pws.pateast.widget.MDITextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="@string/mdi_account_multiple"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_x_large"
            app:layout_widthPercent="20%" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_date"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Walter White"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_medium"
                app:layout_widthPercent="80%" />

            <TextView
                android:id="@+id/tv_father_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:text="@string/title_father_name"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small"
                app:layout_widthPercent="80%" />
        </LinearLayout>


    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_father_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="+1 9874563210"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_father_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_father_contact"
            android:layout_alignStart="@+id/tv_father_contact"
            android:layout_below="@+id/tv_father_contact"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_father_contact"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_mother_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="Allen D"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_mother_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_mother_name"
            android:layout_alignStart="@+id/tv_mother_name"
            android:layout_below="@+id/tv_mother_name"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_mother_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_mother_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="+1 9874563210"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_mother_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_mother_contact"
            android:layout_alignStart="@+id/tv_mother_contact"
            android:layout_below="@+id/tv_mother_contact"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_mother_contact"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>