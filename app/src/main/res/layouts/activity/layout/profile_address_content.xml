<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <com.pws.pateast.widget.MDITextView
            android:id="@+id/tv_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="@string/mdi_home_map_marker"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_x_large"
            app:layout_widthPercent="20%" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_address_icon"
            android:layout_toRightOf="@+id/tv_address_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Mountain View, California, United States"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_medium"
                app:layout_widthPercent="80%" />

            <TextView
                android:id="@+id/tv_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_dob"
                android:layout_below="@+id/tv_dob"
                android:layout_marginTop="@dimen/size_4"
                android:text="@string/title_address"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small"
                app:layout_widthPercent="80%" />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="United State"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_v_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_country_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_country"
            android:layout_alignStart="@+id/tv_country"
            android:layout_below="@+id/tv_country"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_country"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="California"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_v_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_state"
            android:layout_alignStart="@+id/tv_state"
            android:layout_below="@+id/tv_state"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_state"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="Mountain View"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_v_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_state_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_city"
            android:layout_alignStart="@+id/tv_city"
            android:layout_below="@+id/tv_city"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/title_city"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>