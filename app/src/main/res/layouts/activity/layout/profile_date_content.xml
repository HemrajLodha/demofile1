<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16">

        <com.pws.pateast.widget.MDITextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="@string/mdi_calendar"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_x_large"
            app:layout_widthPercent="20%" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_date"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="12-08-2017"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_medium"
                app:layout_widthPercent="80%" />

            <TextView
                android:id="@+id/tv_dob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_dob"
                android:layout_below="@+id/tv_dob"
                android:layout_marginTop="@dimen/size_4"
                android:text="@string/title_dob"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small"
                app:layout_widthPercent="80%" />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <TextView
            android:id="@+id/tv_doj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="12-08-2017"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_v_medium"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="80%" />

        <TextView
            android:id="@+id/tv_doj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_doj"
            android:text="@string/title_doj"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:layout_widthPercent="80%" />

    </android.support.percent.PercentRelativeLayout>


</LinearLayout>