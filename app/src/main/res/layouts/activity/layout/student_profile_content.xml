<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/form_item_margin_top"
    android:background="@android:color/background_light"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <com.pws.pateast.widget.MDITextView
        android:id="@+id/reset_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/reset_password"
        android:layout_toStartOf="@+id/reset_password"
        android:padding="@dimen/size_8"
        android:text="@string/mdi_account_convert"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/text_size_x_large" />

    <com.pws.pateast.widget.MDITextView
        android:id="@+id/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/size_8"
        android:text="@string/mdi_lock_reset"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/text_size_x_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:orientation="vertical">

        <include layout="@layout/profile_user_content" />

        <include layout="@layout/profile_student_qualification_content" />

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <include layout="@layout/profile_date_content" />

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <include layout="@layout/student_personal_detail_content" />


        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <include layout="@layout/profile_address_content" />

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />


        <include layout="@layout/parent_detail_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50" />

    </LinearLayout>
</RelativeLayout>
