<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_900">

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/profile_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/teacher_dashboard_bg"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:ratio="2.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/form_item_margin_top">

                <com.pws.pateast.widget.RectangleRelativeLayout
                    android:id="@+id/ivAvatarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ratio="5">

                    <com.pws.pateast.widget.ProfileImageView
                        android:id="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar1"
                        app:civ_border_color="@color/colorPrimaryLightTeacher"
                        app:civ_border_width="@dimen/size_2" />
                </com.pws.pateast.widget.RectangleRelativeLayout>

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivAvatarView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/form_item_label_padding_top"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/not_available"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:maxLines="1"
                    android:text="@string/not_available"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_small" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/size_48"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/form_item_margin_top">

                <RelativeLayout
                    android:id="@+id/notification_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/form_item_label_padding"
                    android:layout_marginRight="@dimen/form_item_label_padding">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/notification_count"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        android:gravity="bottom|left|start"
                        android:text="@string/fa_bell_o"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_xx_large"
                        app:fontFace="fa" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/message_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notification_view"
                    android:layout_marginEnd="@dimen/form_item_label_padding"
                    android:layout_marginRight="@dimen/form_item_label_padding"
                    android:layout_marginTop="@dimen/size_18">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/message_count"
                        android:layout_width="@dimen/size_40"
                        android:layout_height="@dimen/size_40"
                        android:gravity="bottom|left|start"
                        android:text="@string/fa_comments_o"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_xx_large"
                        app:fontFace="fa" />

                </RelativeLayout>
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/class_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#7FB669"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintEnd_toStartOf="@+id/assignment_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_view"
            app:ratio="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_classes" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="@string/dashboard_menu_my_classes"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />
            </RelativeLayout>
        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/assignment_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E99F18"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintEnd_toStartOf="@+id/schedule_view"
            app:layout_constraintStart_toEndOf="@+id/class_view"
            app:layout_constraintTop_toTopOf="@+id/class_view"
            app:ratio="0.98">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/assignment_icon"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_assignments" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assignment_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/title_assignment"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/schedule_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1BA1E2"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/assignment_view"
            app:layout_constraintTop_toTopOf="@+id/class_view"
            app:ratio="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_my_schedule" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_my_schedule"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_small" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/exam_mark_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#2199AF"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintEnd_toEndOf="@+id/assignment_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/class_view"
            app:ratio="1.8">

            <com.pws.pateast.widget.FTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/form_item_label_padding"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="@string/title_upload_data_for_exam"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/exam_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_2"
                    android:layout_marginRight="@dimen/size_2"
                    android:layout_marginTop="@dimen/form_item_label_padding"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="Tue"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_label_padding"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="24"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_x_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mark_icon"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:src="@drawable/dashboard_exam_marks" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_exam_marks"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/student_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#EA6B75"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/schedule_view"
            app:layout_constraintTop_toBottomOf="@+id/schedule_view"
            app:layout_constraintTop_toTopOf="@+id/exam_mark_view"
            app:ratio="0.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_students"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_students" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_students"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/dashboard_menu_my_students"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/exam_syllabus_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#AB89E0"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            android:paddingTop="@dimen/form_item_margin_top"
            app:layout_constraintEnd_toStartOf="@+id/attendance_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exam_mark_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_syllabus"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_exam_syllabus" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_syllabus"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_exam_schedule"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/attendance_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E99F18"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            android:paddingTop="@dimen/form_item_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/exam_syllabus_view"
            app:layout_constraintTop_toTopOf="@+id/exam_syllabus_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_attendance"
                    android:layout_width="@dimen/size_48"
                    android:layout_height="@dimen/size_48"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_attendance" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_attendance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_attendance"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/my_leave_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#80B66A"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            android:paddingTop="@dimen/form_item_margin_top"
            app:layout_constraintEnd_toStartOf="@+id/student_leave_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exam_syllabus_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/my_icon_leave"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_myleave" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_icon_leave"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_my_leave"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
        </com.pws.pateast.widget.RectangleRelativeLayout>


        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/student_leave_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#219AAF"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            android:paddingTop="@dimen/form_item_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/my_leave_view"
            app:layout_constraintTop_toTopOf="@+id/my_leave_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_leave"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_student_leave" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_leave"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_student_leave"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/event_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#EA6B75"
            app:layout_constraintEnd_toStartOf="@+id/circular_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_leave_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_event"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_events" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_event"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_school_events"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_medium" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/circular_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#AB89E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/event_view"
            app:layout_constraintTop_toTopOf="@+id/event_view"
            app:ratio="1.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_circular"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_circulars" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_circular"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_circular"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_medium" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/holiday_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E09A19"
            app:layout_constraintEnd_toStartOf="@+id/feeds_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_view"
            app:ratio="1.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_holiday"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_holidays" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_holiday"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_holidays"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_medium" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/feeds_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/student_form_icon_blue"
            app:layout_constraintEnd_toStartOf="@+id/settings_view"
            app:layout_constraintStart_toEndOf="@+id/holiday_view"
            app:layout_constraintTop_toTopOf="@+id/holiday_view"
            app:ratio="1.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_ptm"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_ptm" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_ptm"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_feeds"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_v_medium" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>

        <com.pws.pateast.widget.RectangleRelativeLayout
            android:id="@+id/settings_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E8424E"
            android:paddingBottom="@dimen/form_item_margin_top"
            android:paddingEnd="@dimen/form_item_label_padding"
            android:paddingLeft="@dimen/form_item_label_padding"
            android:paddingRight="@dimen/form_item_label_padding"
            android:paddingStart="@dimen/form_item_label_padding"
            android:paddingTop="@dimen/form_item_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/feeds_view"
            app:layout_constraintTop_toTopOf="@+id/holiday_view"
            app:ratio="1.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dashboard_settings" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_settings"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_settings"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>

        </com.pws.pateast.widget.RectangleRelativeLayout>



    </android.support.constraint.ConstraintLayout>
