<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/form_item_margin_top"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <com.pws.pateast.widget.MDITextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/reset_user_name"
        android:layout_toStartOf="@+id/reset_user_name"
        android:padding="@dimen/size_8"
        android:text="@string/mdi_account_edit"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/text_size_x_large" />

    <com.pws.pateast.widget.MDITextView
        android:id="@+id/reset_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/reset_password"
        android:layout_toStartOf="@+id/reset_password"
        android:padding="@dimen/size_8"
        android:text="@string/mdi_account_convert"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/text_size_x_large" />

    <com.pws.pateast.widget.MDITextView
        android:id="@+id/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/size_8"
        android:text="@string/mdi_lock_reset"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/text_size_x_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <include layout="@layout/appbar_profile_content" />

        <include layout="@layout/profile_user_content" />

        <include layout="@layout/profile_date_content" />

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <include layout="@layout/profile_address_content" />

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_item_margin_top">

            <com.pws.pateast.widget.MDITextView
                android:id="@+id/tv_qualification_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="@string/mdi_school"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_x_large"
                app:layout_widthPercent="20%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_qualification_icon"
                android:layout_toRightOf="@+id/tv_qualification_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="MCA"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_medium"
                    app:layout_widthPercent="80%" />

                <TextView
                    android:id="@+id/tv_qualification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_qualification"
                    android:layout_below="@+id/tv_qualification"
                    android:layout_marginTop="@dimen/size_4"
                    android:text="@string/title_qualification"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small"
                    app:layout_widthPercent="80%" />
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/form_item_margin_top" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_item_margin_top">

            <com.pws.pateast.widget.MDITextView
                android:id="@+id/tv_subjects_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="@string/mdi_book_multiple"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_x_large"
                app:layout_widthPercent="20%" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_subjects_icon"
                android:layout_toRightOf="@+id/tv_subjects_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="English,Maths"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_medium"
                    app:layout_widthPercent="80%" />

                <TextView
                    android:id="@+id/tv_subjects_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_qualification"
                    android:layout_below="@+id/tv_qualification"
                    android:layout_marginTop="@dimen/size_4"
                    android:text="@string/title_subjects"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small"
                    app:layout_widthPercent="80%" />
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50" />

    </LinearLayout>
</RelativeLayout>
