<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/list_left_padding">

        <LinearLayout
            android:id="@+id/layout_other_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_regular"
                android:gravity="center"
                android:text="@string/hint_compose_post"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_8" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="255"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/et_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background_sqaure"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="top"
                    android:hint="@string/hint_write_here"
                    android:lines="8"
                    android:maxLength="255"
                    android:maxLines="8"
                    android:padding="@dimen/size_4"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_16" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/view_add_file"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_16"
            android:background="@drawable/edittext_background_sqaure">

            <com.pws.pateast.widget.FTextView
                android:layout_width="@dimen/size_50"
                android:layout_height="match_parent"
                android:background="@color/textColorBG"
                android:fontFamily="@font/proxima_regular"
                android:gravity="center"
                android:text="@string/fa_upload"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_large"
                app:fontFace="fa" />

            <TextView
                android:id="@+id/tv_select_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/hint_add_photo_video"
                android:paddingStart="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingEnd="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_8"
            android:background="@drawable/edittext_background_sqaure">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/size_50"
                android:layout_height="match_parent"
                android:background="@color/textColorBG"
                android:gravity="center"
                android:padding="@dimen/size_6"
                android:src="@drawable/dashboard_classes"
                android:tint="@color/textColorHint"
                android:tintMode="multiply" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_select_classes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/hint_select_classes"
                android:paddingStart="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingEnd="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginBottom="@dimen/size_8"
            android:background="@drawable/edittext_background_sqaure">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/size_50"
                android:layout_height="match_parent"
                android:background="@color/textColorBG"
                android:gravity="center"
                android:padding="@dimen/size_6"
                android:src="@drawable/dashboard_classes"
                android:tint="@color/textColorHint"
                android:tintMode="multiply" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_select_teacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/hint_select_teacher"
                android:paddingStart="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:paddingEnd="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            android:buttonTint="?attr/colorAccent"
            android:fontFamily="@font/proxima_regular"
            android:text="@string/post_feed_all"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submit"
            style="@style/MaterialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>