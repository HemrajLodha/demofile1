<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_calendar_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_bottom_padding"
    android:textDirection="locale"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.pws.pateast.widget.RectangleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ratio="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teacher_form_color_purple"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/btn_previous_month"
                    android:layout_width="@dimen/size_64"
                    android:layout_height="@dimen/size_48"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="@string/fa_previous"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_x_large"
                    app:fontFace="fa" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="Aug,17"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/btn_next_month"
                    android:layout_width="@dimen/size_64"
                    android:layout_height="@dimen/size_48"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/fa_next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_x_large"
                    app:fontFace="fa" />

            </RelativeLayout>

            <com.pws.calender.CompactCalendarView
                android:id="@+id/cv_attendance_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:compactCalendarBackgroundColor="@color/teacher_form_color_purple"
                app:compactCalendarDisplayOtherMonthDays="true"
                app:compactCalendarEventIndicatorStyle="small_indicator"
                app:compactCalendarOtherMonthDaysTextColor="@color/textColorBorder"
                app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
                app:compactCalendarTextColor="@color/white"
                app:compactCalendarTextSize="@dimen/text_size_small"
                app:compactWeekDayBackgroundColor="@color/calendar_week_day_bg_color" />

        </com.pws.pateast.widget.RectangleLinearLayout>
    </LinearLayout>

    <com.pws.pateast.widget.FTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@string/font_sans_serif_medium"
        android:gravity="center"
        android:paddingTop="@dimen/form_item_margin_top"
        android:text="@string/monthly_report"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_small" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_bottom_padding">

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@string/font_sans_serif_medium"
            android:gravity="center"
            android:text="Bolton"
            android:textColor="@color/teacher_class_schedule_form_blue"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginTop="@dimen/size_4"
            android:background="@drawable/divider_recycle_view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_top_padding"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="@string/working_days"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_total_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_v_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="@string/total_absent"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_total_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_v_medium" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingLeft="@dimen/list_top_padding">

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="@string/total_present"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_total_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_v_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay1"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="@string/total_late"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_total_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_v_medium" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
