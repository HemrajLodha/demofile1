<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/divider_reset_password"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:padding="@dimen/size_16"
    android:showDividers="middle"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@drawable/edittext_background_sqaure">

        <TextView
            android:id="@+id/tv_select_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:fontFamily="@string/font_sans_serif_condensed"
            android:gravity="center_vertical"
            android:hint="@string/hint_select_payment"
            android:paddingEnd="@dimen/size_16"
            android:paddingLeft="@dimen/size_16"
            android:paddingRight="@dimen/size_16"
            android:paddingStart="@dimen/size_16"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/text_size_v_medium" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/form_item_margin_top">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_checkout"
            style="@style/MaterialButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/form_item_label_padding_top"
            android:layout_weight="1"
            android:fontFamily="@font/proxima_regular"
            android:text="@string/checkout"
            android:textSize="@dimen/text_size_v_medium" />

    </LinearLayout>
</LinearLayout>