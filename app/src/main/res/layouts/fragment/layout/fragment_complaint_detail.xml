<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_reset_password"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/size_10"
            android:showDividers="middle|beginning|end">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_4"
                app:cardElevation="@dimen/size_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/size_16"
                    android:paddingVertical="@dimen/size_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.pws.pateast.widget.FTextView
                                android:id="@+id/tv_complaint_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_condensed"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_v_medium" />

                            <com.pws.pateast.widget.FTextView
                                android:id="@+id/tv_complaint_by_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_payment_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:text="@string/leave_pending"
                            android:visibility="gone"
                            android:textAllCaps="true"
                            android:textColor="@color/md_red_700"
                            android:textSize="@dimen/text_size_v_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text="@string/hint_penalty"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_v_medium" />

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_penalty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text="@string/label_date_time"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_v_medium" />

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text="@string/hint_follow_action"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_v_medium" />

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_follow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_download_proof"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_30"
                        android:layout_gravity="end|right"
                        android:background="@null"
                        android:fontFamily="@font/proxima_regular"
                        android:text="@string/label_download_proof"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="@dimen/text_size_v_small" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_4"
                app:cardElevation="@dimen/size_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/size_16"
                    android:paddingVertical="@dimen/size_8">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:text="@string/menu_complaint_detail"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_complaint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_4"
        app:cardElevation="@dimen/size_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_reset_password"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingVertical="@dimen/size_8"
            android:showDividers="middle|beginning|end">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_primary"
                android:fontFamily="@font/proxima_regular"
                android:text="@string/accept_pay_now"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_v_medium" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_regular"
                android:text="@string/report_discuss"
                android:textSize="@dimen/text_size_v_medium" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>