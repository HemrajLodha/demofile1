<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_16"
                android:layout_marginVertical="@dimen/size_8"
                android:orientation="vertical">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_event_attachment"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_blank_accent"
                    android:gravity="center"
                    android:text="@string/mdi_attachment"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/text_size_x_large"
                    app:fontFace="mdi" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_event_attachment"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/text_size_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_title"
                    android:layout_toLeftOf="@+id/tv_event_attachment"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/list_top_padding"
                        android:layout_marginRight="@dimen/list_top_padding"
                        android:text="@string/fa_clock_o"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="@dimen/text_size_medium"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium" />

                </LinearLayout>
            </RelativeLayout>

            <View style="@style/Divider" />

            <com.pws.pateast.widget.ProfileDetailView
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag="@string/venue">

            </com.pws.pateast.widget.ProfileDetailView>

            <View style="@style/Divider" />

            <com.pws.pateast.widget.ProfileDetailView
                android:id="@+id/dress_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag="@string/dress_code">

            </com.pws.pateast.widget.ProfileDetailView>

            <View style="@style/Divider" />

            <com.pws.pateast.widget.ProfileDetailView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag="@string/instructions">

            </com.pws.pateast.widget.ProfileDetailView>

            <View style="@style/Divider" />

            <com.pws.pateast.widget.ProfileDetailView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tag="@string/details">

            </com.pws.pateast.widget.ProfileDetailView>

            <View style="@style/Divider" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>