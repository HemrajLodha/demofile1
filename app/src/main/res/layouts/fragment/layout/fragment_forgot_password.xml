<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:padding="@dimen/size_20"
    android:textDirection="locale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pws.pateast.widget.RectangleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_splash"
                app:ratio="7" />

            <com.pws.pateast.widget.RectangleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ratio="8" />

            <ViewFlipper
                android:id="@+id/flip_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/username"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/size_30"
                    android:paddingRight="@dimen/size_30"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_reset_password"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <EditText
                        android:id="@+id/et_otp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:background="@drawable/edittext_background"
                        android:digits="0123456789"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:hint="@string/otp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/size_30"
                        android:paddingRight="@dimen/size_30"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_small" />

                    <EditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:hint="@string/new_password_et"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/size_30"
                        android:paddingRight="@dimen/size_30"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_small" />

                    <EditText
                        android:id="@+id/et_repeat_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:hint="@string/repeat_password_et"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/size_30"
                        android:paddingRight="@dimen/size_30"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>


            </ViewFlipper>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/LoginButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:text="@string/submit"
                    android:textSize="@dimen/text_size_small" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_resend"
                    style="@style/LoginButtonStyleDark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="@string/resend_otp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>