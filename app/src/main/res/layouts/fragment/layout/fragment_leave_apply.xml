<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/form_item_margin_top"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/form_item_margin_top">

        <com.pws.pateast.widget.MaterialSpinner
            android:id="@+id/sp_leave_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/white"
            app:ms_arrowColor="@color/textColor"
            app:ms_arrowSize="@dimen/size_12"
            app:ms_floatingLabelColor="@color/textColorHint"
            app:ms_floatingLabelText="@string/select_reason"
            app:ms_hint="@string/select_reason"
            app:ms_multiline="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_reason_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/et_left_right_padding"
            android:theme="@style/TextLabel"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_reason_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/textColor"
                android:hint="@string/hint_other"
                android:imeOptions="actionDone"
                android:paddingLeft="@dimen/et_left_right_padding"
                android:paddingRight="@dimen/et_left_right_padding"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_v_medium" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/view_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/editTextBackground"
                android:paddingBottom="@dimen/size_12">

                <com.pws.pateast.widget.MDITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_4"
                    android:text="@string/mdi_calendar"
                    android:textColor="@color/md_grey_800"
                    android:textSize="@dimen/text_size_v_medium" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_4"
                    android:layout_marginRight="@dimen/size_4"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.pws.pateast.widget.datepickerview.DatePickerEditText
                        android:id="@+id/et_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_start_date"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium"
                        app:dateFormat="yyyy-MM-dd" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/editTextBackground"
                android:paddingBottom="@dimen/size_12">

                <com.pws.pateast.widget.MDITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_4"
                    android:text="@string/mdi_calendar"
                    android:textColor="@color/md_grey_800"
                    android:textSize="@dimen/text_size_v_medium" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_4"
                    android:layout_marginRight="@dimen/size_4"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.pws.pateast.widget.datepickerview.DatePickerEditText
                        android:id="@+id/et_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_end_date"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium"
                        app:dateFormat="yyyy-MM-dd" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_error_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:paddingLeft="@dimen/et_left_right_padding"
                android:paddingRight="@dimen/et_left_right_padding"
                android:textColor="@color/error_color"
                android:textSize="@dimen/text_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_error_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:paddingLeft="@dimen/et_left_right_padding"
                android:paddingRight="@dimen/et_left_right_padding"
                android:textColor="@color/error_color"
                android:textSize="@dimen/text_12"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:fontFamily="@string/font_sans_serif_medium"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium" />
</RelativeLayout>