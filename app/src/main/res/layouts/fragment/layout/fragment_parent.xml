<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <com.pws.pateast.widget.RectangleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical"
        app:ratio="2">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="Alex Stephan"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@string/font_sans_serif"
            android:text="Father"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_small" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/form_item_margin_top"
            android:src="@drawable/user_placeholder" />


    </com.pws.pateast.widget.RectangleLinearLayout>

    <com.base.ui.view.BaseRecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/form_item_label_padding_top">

    </com.base.ui.view.BaseRecyclerView>

</LinearLayout>