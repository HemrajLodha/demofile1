<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="start|left"
                    android:hint="@string/current_password_et"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_v_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="left|start"
                    android:hint="@string/new_password_et"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="left|start"
                    android:hint="@string/repeat_password_et"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium" />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_48"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/form_item_margin_top"
                android:background="@drawable/button_bg_selector"
                android:fontFamily="@font/proxima_regular"
                android:paddingHorizontal="@dimen/size_16"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_v_medium" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>