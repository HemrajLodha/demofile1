<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

            <com.pws.pateast.widget.RectangleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_16"
                android:gravity="center"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|left|start"
                app:ratio="3">

                <com.pws.pateast.widget.ProfileImageView
                    android:id="@+id/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/size_10"
                    android:src="@drawable/user_placeholder"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="@dimen/size_2"
                    app:ratio="1" />
            </com.pws.pateast.widget.RectangleLinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="left|start"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="left|start"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_item_margin_top"
                    android:backgroundTint="@color/textColor"
                    android:digits="0123456789"
                    android:fontFamily="@font/proxima_regular"
                    android:gravity="left|start"
                    android:hint="@string/mobile"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium" />

            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/form_item_margin_top"
                android:background="@drawable/button_bg_selector"
                android:fontFamily="@font/proxima_regular"
                android:paddingHorizontal="@dimen/size_16"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_v_medium" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>