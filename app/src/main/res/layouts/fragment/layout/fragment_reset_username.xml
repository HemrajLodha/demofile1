<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <com.pws.pateast.widget.FTextView
                android:layout_width="@dimen/size_50"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:text="@string/mdi_account"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/text_size_large"
                app:fontFace="mdi" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:gravity="start|left|center_vertical"
                android:hint="@string/username"
                android:maxLength="20"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_30"
                android:paddingRight="@dimen/size_30"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <com.pws.pateast.widget.FTextView
                android:layout_width="@dimen/size_50"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:text="@string/mdi_lock"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/text_size_large"
                app:fontFace="mdi" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:gravity="start|left|center_vertical"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_30"
                android:paddingRight="@dimen/size_30"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_reset_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/form_item_margin_top"
            android:background="@drawable/button_bg_selector"
            android:fontFamily="@font/proxima_regular"
            android:paddingHorizontal="@dimen/size_16"
            android:text="@string/reset_username"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_v_medium" />
    </LinearLayout>
</ScrollView>
