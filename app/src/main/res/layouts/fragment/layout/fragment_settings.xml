<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:padding="@dimen/size_8"
    android:textDirection="locale">

    <LinearLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.pws.pateast.widget.FTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_condensed"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size_8"
            android:paddingTop="@dimen/size_8"
            android:text="@string/menu_profile"
            android:textAllCaps="true"
            android:textColor="@color/textColorHint"
            android:textSize="@dimen/text_size_small" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_8"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/size_6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/fa_edit"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_large"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:text="@string/edit_profile"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/fa_chevron_right"
                        android:textColor="@color/md_grey_400"
                        android:textSize="@dimen/text_size_medium"
                        app:fontFace="fa" />

                </LinearLayout>

                <View style="@style/Divider" />

                <LinearLayout
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/fa_lock"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_large"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:text="@string/change_password"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_medium" />

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="@dimen/size_40"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/fa_chevron_right"
                        android:textColor="@color/md_grey_400"
                        android:textSize="@dimen/text_size_medium"
                        app:fontFace="fa" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <com.pws.pateast.widget.FTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_sans_serif_condensed"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingTop="@dimen/size_8"
        android:text="@string/hint_other_settings"
        android:textAllCaps="true"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/text_size_small" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/size_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginEnd="@dimen/size_8"
                android:layout_marginRight="@dimen/size_8"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_bell_o"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_large"
                    app:fontFace="fa" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:text="@string/menu_notifications"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SwitchStyle" />

            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/change_language"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_language"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_large"
                    app:fontFace="fa" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:text="@string/action_change_language_title"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_chevron_right"
                    android:textColor="@color/md_grey_400"
                    android:textSize="@dimen/text_size_medium"
                    app:fontFace="fa" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.pws.pateast.widget.FTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_sans_serif_condensed"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/size_8"
        android:paddingTop="@dimen/size_16"
        android:text="@string/hint_about"
        android:textAllCaps="true"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/text_size_small" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/size_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:text="@string/menu_privacy_policy"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_chevron_right"
                    android:textColor="@color/md_grey_400"
                    android:textSize="@dimen/text_size_medium"
                    app:fontFace="fa" />
            </LinearLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_16"
                android:layout_marginStart="@dimen/size_16"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:text="@string/menu_terms"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_chevron_right"
                    android:textColor="@color/md_grey_400"
                    android:textSize="@dimen/text_size_medium"
                    app:fontFace="fa" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/size_6">

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FTextView
                android:layout_width="@dimen/size_40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/fa_power_off"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large"
                app:fontFace="fa" />

            <com.pws.pateast.widget.FTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:text="@string/menu_logout"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>