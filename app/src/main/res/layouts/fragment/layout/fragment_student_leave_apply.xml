<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/list_left_padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginBottom="@dimen/size_8"
                android:background="@drawable/edittext_background_sqaure">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:background="@color/textColorBG"
                    android:gravity="center"
                    android:text="@string/fa_calender"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_large" />

                <com.pws.pateast.widget.datepickerview.DatePickerEditText
                    android:id="@+id/et_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_start_date"
                    android:paddingEnd="@dimen/size_16"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium"
                    app:dateFormat="yyyy-MM-dd" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginBottom="@dimen/size_8"
                android:background="@drawable/edittext_background_sqaure">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:background="@color/textColorBG"
                    android:gravity="center"
                    android:text="@string/fa_calender"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_large" />

                <com.pws.pateast.widget.datepickerview.DatePickerEditText
                    android:id="@+id/et_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_end_date"
                    android:paddingEnd="@dimen/size_16"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium"
                    app:dateFormat="yyyy-MM-dd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_duration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginBottom="@dimen/size_8"
                android:background="@drawable/edittext_background_sqaure"
                android:visibility="gone">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:background="@color/textColorBG"
                    android:gravity="center"
                    android:text="@string/fa_wait_half"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_duration"
                    android:paddingEnd="@dimen/size_16"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_specify_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginBottom="@dimen/size_8"
                android:background="@drawable/edittext_background_sqaure"
                android:visibility="gone">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:background="@color/textColorBG"
                    android:gravity="center"
                    android:text="@string/fa_clock"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_specify_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_specify_time"
                    android:paddingEnd="@dimen/size_16"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginBottom="@dimen/size_16"
                android:background="@drawable/edittext_background_sqaure">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="match_parent"
                    android:background="@color/textColorBG"
                    android:gravity="center"
                    android:text="@string/fa_question"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_select_reason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="center_vertical"
                    android:hint="@string/select_reason"
                    android:paddingEnd="@dimen/size_16"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:paddingStart="@dimen/size_16"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_other_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hint_comment"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_8" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="255"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/et_reason_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background_sqaure"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="top"
                        android:lines="5"
                        android:maxLength="255"
                        android:maxLines="5"
                        android:padding="@dimen/size_4"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_medium" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_16" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_submit"
                style="@style/MaterialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit" />

            <com.pws.pateast.widget.AuthorView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:message="@string/apply_leave_message"
                app:messageColor="?attr/colorPrimary">

            </com.pws.pateast.widget.AuthorView>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>