<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <android.support.v7.widget.CardView
        android:id="@+id/card_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_select_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/edittext_background_sqaure"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:ellipsize="end"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/title_class"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_select_exam"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/edittext_background_sqaure"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:ellipsize="end"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/title_exam"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_select_student"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/edittext_background_sqaure"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:ellipsize="end"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:hint="@string/title_student"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_16"
                android:paddingRight="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_8"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_4"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/form_item_margin_top"
                        android:paddingEnd="@dimen/form_item_label_padding"
                        android:paddingLeft="@dimen/form_item_label_padding"
                        android:paddingRight="@dimen/form_item_label_padding"
                        android:paddingStart="@dimen/form_item_label_padding"
                        android:paddingTop="@dimen/form_item_margin_top"
                        android:weightSum="1">

                        <com.pws.pateast.widget.RectangleLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.2"
                            app:ratio="1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/avatar1"
                                app:civ_border_color="@color/student_form_color_purple"
                                app:civ_border_overlay="true"
                                app:civ_border_width="@dimen/size_2" />

                        </com.pws.pateast.widget.RectangleLinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/list_right_padding"
                            android:paddingStart="@dimen/list_right_padding">

                            <com.pws.pateast.widget.FTextView
                                android:id="@+id/tv_student_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:maxLines="1"
                                android:text="Test Name"
                                android:textColor="@color/colorPrimaryStudent"
                                android:textSize="@dimen/text_size_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_2"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingRight="@dimen/list_right_padding">

                                    <com.pws.pateast.widget.FATextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingEnd="@dimen/list_top_padding"
                                        android:paddingRight="@dimen/list_top_padding"
                                        android:text="@string/fa_phone"
                                        android:textColor="@color/student_form_color_yellow"
                                        android:textSize="@dimen/text_size_v_medium" />

                                    <com.pws.pateast.widget.FTextView
                                        android:id="@+id/tv_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_sans_serif_medium"
                                        android:text="8956231402"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/text_size_small" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_4"
                                    android:orientation="horizontal">

                                    <com.pws.pateast.widget.FTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_sans_serif_condensed"
                                        android:text="@string/title_enroll_no"
                                        android:textColor="@color/textColorHint"
                                        android:textSize="@dimen/text_size_small" />

                                    <com.pws.pateast.widget.FTextView
                                        android:id="@+id/tv_enroll_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:fontFamily="@string/font_sans_serif_medium"
                                        android:maxLines="1"
                                        android:textColor="@color/textColor"
                                        android:textSize="@dimen/text_size_small" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_8"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_4"
                app:cardElevation="0dp">

                <com.pws.pateast.widget.RectangleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:ratio="1">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_top_padding"
                        android:text="@string/student_mark_stats"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_medium"
                        android:textStyle="bold" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/graph"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_4" />
                </com.pws.pateast.widget.RectangleLinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_4"
                app:cardElevation="0dp">

                <com.base.ui.view.BaseRecyclerView
                    android:id="@+id/rv_exam_marks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_50" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center"
                    android:text="No Record found"
                    android:textColor="@color/md_grey_800"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>