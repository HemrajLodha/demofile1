<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/form_item_margin_top">

        <com.pws.pateast.widget.FTextView
            android:id="@+id/btn_previous_month"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_48"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/fa_previous"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_x_large"
            app:fontFace="fa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginVertical="@dimen/list_bottom_padding"
            android:gravity="center"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="@string/daily_report"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/list_top_padding"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="Bolton"
                android:textColor="@color/teacher_class_schedule_form_blue"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <com.pws.pateast.widget.FTextView
            android:id="@+id/btn_next_month"
            android:layout_width="@dimen/size_64"
            android:layout_height="@dimen/size_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/fa_next"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_x_large"
            app:fontFace="fa" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginHorizontal="@dimen/list_left_padding"
        android:layout_marginTop="@dimen/size_4"
        android:background="@drawable/divider_recycle_view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_attendance_report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_250"
        android:layout_margin="@dimen/list_left_padding">

    </android.support.v4.view.ViewPager>
</LinearLayout>