<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/size_16">


            <com.pws.pateast.widget.MaterialSpinner
                android:id="@+id/sp_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                app:ms_arrowColor="@color/textColor"
                app:ms_arrowSize="@dimen/size_12"
                app:ms_floatingLabelColor="@color/textColorHint"
                app:ms_floatingLabelText="@string/select_subject"
                app:ms_hint="@string/select_subject"
                app:ms_multiline="true" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_error_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_left_right_padding"
                android:visibility="gone">

                <com.pws.pateast.widget.datepickerview.DatePickerEditText
                    android:id="@+id/et_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/textColor"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_start_date"
                    android:paddingLeft="@dimen/et_left_right_padding"
                    android:paddingRight="@dimen/et_left_right_padding"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium"
                    app:dateFormat="yyyy-MM-dd" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tv_error_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_left_right_padding"
                android:visibility="gone">

                <com.pws.pateast.widget.datepickerview.DatePickerEditText
                    android:id="@+id/et_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_top_padding"
                    android:backgroundTint="@color/textColor"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_end_date"
                    android:paddingLeft="@dimen/et_left_right_padding"
                    android:paddingRight="@dimen/et_left_right_padding"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_v_medium"
                    app:dateFormat="yyyy-MM-dd" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/form_item_margin_top">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/form_item_label_padding_top"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="@string/reset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_apply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/form_item_label_padding_top"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="@string/apply"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>