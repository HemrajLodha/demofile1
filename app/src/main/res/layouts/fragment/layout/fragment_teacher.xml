<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <com.pws.pateast.widget.RectangleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical"
        app:ratio="2">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:fontFamily="@string/font_sans_serif_medium"
            android:maxLines="1"
            android:text="Alex Stephan"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:fontFamily="@string/font_sans_serif"
            android:maxLines="1"
            android:text="Tonk Phatak, Jaipur, Rajasthan"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_small" />

        <com.pws.pateast.widget.RectangleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_item_label_padding"
            android:gravity="center"
            app:ratio="4">

            <com.pws.pateast.widget.RectangleLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:ratio="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_placeholder" />
            </com.pws.pateast.widget.RectangleLinearLayout>
        </com.pws.pateast.widget.RectangleLinearLayout>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/form_item_label_padding"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="@dimen/form_item_label_padding"
            android:ellipsize="end"
            android:fontFamily="@string/font_sans_serif"
            android:gravity="center"
            android:maxLines="1"
            android:text="0141-655555"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_small" />
    </com.pws.pateast.widget.RectangleLinearLayout>

    <com.base.ui.view.BaseRecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/form_item_label_padding_top">

    </com.base.ui.view.BaseRecyclerView>

</LinearLayout>