<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_4"
    app:cardElevation="@dimen/size_4"
    app:cardUseCompatPadding="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pws.pateast.widget.RectangleRelativeLayout
                android:id="@+id/layout_ward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:ratio="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.RectangleLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/list_left_padding"
                        app:ratio="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_ward_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:civ_border_color="@color/colorPrimaryParent"
                            app:civ_border_width="@dimen/size_3" />

                    </com.pws.pateast.widget.RectangleLinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ward_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:maxLines="1"
                                android:text="@string/classes"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_ward_class"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_ward_institute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                </LinearLayout>


            </com.pws.pateast.widget.RectangleRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/list_left_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_8"
                    android:background="@drawable/edittext_background_sqaure">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_calender_check_o"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tv_leave_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/select_leave_type"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_leave_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:gravity="end"
                    android:paddingBottom="@dimen/form_item_margin_top"
                    android:paddingTop="@dimen/form_item_label_padding_top"
                    android:text="@string/title_balance"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_8"
                    android:background="@drawable/edittext_background_sqaure">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_calender"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <com.pws.pateast.widget.datepickerview.DatePickerEditText
                        android:id="@+id/et_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_start_date"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium"
                        app:dateFormat="yyyy-MM-dd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_8"
                    android:background="@drawable/edittext_background_sqaure">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_calender"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <com.pws.pateast.widget.datepickerview.DatePickerEditText
                        android:id="@+id/et_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_end_date"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium"
                        app:dateFormat="yyyy-MM-dd" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_duration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_8"
                    android:background="@drawable/edittext_background_sqaure"
                    android:visibility="gone">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_wait_half"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_duration"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_specify_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_8"
                    android:background="@drawable/edittext_background_sqaure"
                    android:visibility="gone">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_clock"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tv_specify_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_specify_time"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginBottom="@dimen/size_16"
                    android:background="@drawable/edittext_background_sqaure">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="@dimen/size_50"
                        android:layout_height="match_parent"
                        android:background="@color/textColorBG"
                        android:gravity="center"
                        android:text="@string/fa_question"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tv_select_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:drawableRight="@drawable/ic_arrow_drop_down"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:gravity="center_vertical"
                        android:hint="@string/select_reason"
                        android:paddingEnd="@dimen/size_16"
                        android:paddingLeft="@dimen/size_16"
                        android:paddingRight="@dimen/size_16"
                        android:paddingStart="@dimen/size_16"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_other_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/hint_comment"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_8" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="255"
                        app:hintEnabled="false">

                        <EditText
                            android:id="@+id/et_reason_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background_sqaure"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:gravity="top"
                            android:lines="5"
                            android:maxLength="255"
                            android:maxLines="5"
                            android:padding="@dimen/size_4"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_16" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/MaterialButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit" />

                <com.pws.pateast.widget.AuthorView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:message="@string/apply_leave_message"
                    app:messageColor="?attr/colorPrimary">

                </com.pws.pateast.widget.AuthorView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>