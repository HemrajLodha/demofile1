<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:layoutDirection="locale"
    android:textDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/appbar_profile_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_4"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_4"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/size_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFace="mdi"
                    app:fontIcon="@string/mdi_account_convert"
                    app:tag="@string/username">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_dob">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/doj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_doj">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_address">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_country">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_state">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />


                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_city">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_qualification">

                </com.pws.pateast.widget.ProfileDetailView>

                <View style="@style/Divider" />

                <com.pws.pateast.widget.ProfileDetailView
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tag="@string/title_subjects">

                </com.pws.pateast.widget.ProfileDetailView>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>