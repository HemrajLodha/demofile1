<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_72"
    android:layout_height="@dimen/size_72"
    app:cardElevation="@dimen/size_4"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_2">

        <ImageView
            android:id="@+id/img_files"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:background="@drawable/selected_radius"
            android:gravity="center"
            android:text="@string/fa_close"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_v_small"
            app:fontFace="fa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/img_file_type"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:background="@drawable/unselected_radius"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_v_small"
            app:fontFace="fa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>