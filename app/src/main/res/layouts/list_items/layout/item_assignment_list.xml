<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/size_4">


    <LinearLayout
        android:id="@+id/layout_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_right_padding"
        android:layout_marginEnd="@dimen/list_right_padding"
        android:layout_marginLeft="@dimen/list_left_padding"
        android:layout_marginRight="@dimen/list_right_padding"
        android:layout_marginStart="@dimen/list_left_padding"
        android:layout_marginTop="@dimen/list_top_padding"
        android:layout_toLeftOf="@+id/img_download"
        android:layout_toStartOf="@+id/img_download"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_assignment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Assignment Title"
                android:textColor="@color/student_form_color_yellow"
                android:textSize="@dimen/text_size_medium" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:paddingBottom="@dimen/shape_padding"
                android:paddingEnd="@dimen/list_right_padding"
                android:paddingLeft="@dimen/list_left_padding"
                android:paddingRight="@dimen/list_right_padding"
                android:paddingStart="@dimen/list_left_padding"
                android:paddingTop="@dimen/shape_padding"
                android:text="@string/tv_options_code"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_2"
                android:layout_marginRight="@dimen/size_2"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:src="@drawable/dashboard_classes"
                    android:tint="@color/student_form_color_red" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginStart="@dimen/size_2"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:gravity="center"
                    android:text="@string/fa_book"
                    android:textColor="@color/student_form_color_red"
                    android:textSize="@dimen/text_size_small" />


                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_item_label_padding_top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_2"
                android:layout_marginRight="@dimen/size_2"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FATextView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/fa_clock_o"
                    android:textColor="@color/student_form_color_red"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_2"
                android:layout_marginStart="@dimen/size_2"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginEnd="@dimen/list_top_padding"
                    android:layout_marginRight="@dimen/list_top_padding"
                    android:src="@drawable/ic_attachment"
                    android:tint="@color/student_form_color_red" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>