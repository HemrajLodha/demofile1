<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_bottom_padding"
            android:layout_marginEnd="@dimen/list_right_padding"
            android:layout_marginLeft="@dimen/list_left_padding"
            android:layout_marginRight="@dimen/list_right_padding"
            android:layout_marginStart="@dimen/list_left_padding"
            android:layout_marginTop="@dimen/list_top_padding"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.pws.pateast.widget.RectangleLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                app:ratio="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar1"
                    app:civ_border_color="@color/student_form_color_purple"
                    app:civ_border_overlay="true"
                    app:civ_border_width="@dimen/size_2" />

            </com.pws.pateast.widget.RectangleLinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/list_left_padding"
                android:layout_marginStart="@dimen/list_left_padding"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/list_bottom_padding"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:maxLines="1"
                    android:text="Alexon"
                    android:textColor="@color/colorPrimaryStudent"
                    android:textSize="@dimen/text_size_v_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/list_top_padding"
                        android:layout_marginRight="@dimen/list_top_padding"
                        android:text="@string/fa_phone"
                        android:textColor="@color/student_form_color_yellow"
                        android:textSize="@dimen/text_size_small"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="9856231021"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vw_view_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="@dimen/size_36"
                    android:layout_height="@dimen/size_36"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/attendance_report_bg"
                    android:gravity="center"
                    android:text="@string/fa_file_text"
                    android:textColor="@color/student_form_color_red"
                    android:textSize="@dimen/text_size_small"
                    app:fontFace="fa" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_2"
                    android:text="@string/title_report"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:background="@color/md_grey_200" />

        <LinearLayout
            android:id="@+id/rg_leave_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_28"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_marginStart="@dimen/size_6"
            android:layout_marginTop="@dimen/form_item_label_padding_top"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/vw_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_present"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/proxima_regular"
                    android:text="@string/leave_status_present"
                    android:textColor="@color/teacher_class_schedule_form_green"
                    android:textSize="@dimen/text_size_small"
                    app:buttonTint="@color/teacher_class_schedule_form_green" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/vw_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/proxima_regular"
                    android:text="@string/leave_status_late"
                    android:textColor="@color/student_form_color_yellow"
                    android:textSize="@dimen/text_size_small"
                    app:buttonTint="@color/student_form_color_yellow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vw_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:fontFamily="@font/proxima_regular"
                    android:text="@string/leave_status_absent"
                    android:textColor="@color/student_form_color_red"
                    android:textSize="@dimen/text_size_small"
                    app:buttonTint="@color/student_form_color_red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>