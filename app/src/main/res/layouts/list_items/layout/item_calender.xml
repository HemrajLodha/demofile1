<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_date"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layoutDirection="locale"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/et_left_right_padding"
    android:paddingRight="@dimen/et_left_right_padding"
    android:textDirection="locale">

    <com.pws.pateast.widget.FTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8"
        android:text="@string/fa_calender"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:fontFace="fa" />

    <com.pws.pateast.widget.datepickerview.DatePickerEditText
        android:id="@+id/et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_4"
        android:layout_marginRight="@dimen/size_4"
        android:background="@null"
        android:fontFamily="@string/font_sans_serif_medium"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_v_medium"
        app:dateFormat="yyyy-MM-dd" />


</LinearLayout>