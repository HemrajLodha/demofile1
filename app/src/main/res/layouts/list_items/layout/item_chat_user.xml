<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_2"
    android:layout_marginEnd="@dimen/size_4"
    android:layout_marginLeft="@dimen/size_4"
    android:layout_marginRight="@dimen/size_4"
    android:layout_marginStart="@dimen/size_4"
    android:layout_marginTop="@dimen/size_2"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_top_padding"
        android:weightSum="1">

        <com.pws.pateast.widget.RectangleLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:ratio="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar1"
                app:civ_border_color="@color/student_form_color_purple"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/size_2" />

        </com.pws.pateast.widget.RectangleLinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/list_left_padding">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryStudent"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_small"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:maxLines="1"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_small"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:maxLines="1"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:textColor="@color/textColorHint"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_info_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:ellipsize="end"
                        android:fontFamily="@string/font_sans_serif_light"
                        android:maxLines="1"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>