<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/size_4"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_2"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/size_16"
        android:paddingVertical="@dimen/size_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_circular_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryParent"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/label_circular_number"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_circular_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/date"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_circular_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>