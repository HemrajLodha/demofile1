<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/list_right_padding"
            android:layout_marginLeft="@dimen/list_left_padding"
            android:layout_marginRight="@dimen/list_right_padding"
            android:layout_marginStart="@dimen/list_left_padding"
            android:layout_marginTop="@dimen/list_top_padding">

            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_right_padding"
                    android:layout_marginRight="@dimen/list_right_padding"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/colorPrimaryStudent"
                        android:textSize="@dimen/text_size_v_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.pws.pateast.widget.FTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_condensed"
                                android:text="@string/from"
                                android:textColor="?attr/colorAccent"
                                android:textSize="@dimen/text_size_small" />

                            <com.pws.pateast.widget.FTextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:textColor="?attr/colorAccent"
                                android:textSize="@dimen/text_size_v_small" />

                        </LinearLayout>

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text=" - "
                            android:textColor="?attr/colorAccent"
                            android:textSize="@dimen/text_size_v_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.pws.pateast.widget.FTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_condensed"
                                android:text="@string/to"
                                android:textColor="?attr/colorAccent"
                                android:textSize="@dimen/text_size_small" />

                            <com.pws.pateast.widget.FTextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_sans_serif_medium"
                                android:textColor="?attr/colorAccent"
                                android:textSize="@dimen/text_size_v_small" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFace="fa"
                            android:layout_marginEnd="@dimen/list_top_padding"
                            android:layout_marginRight="@dimen/list_top_padding"
                            android:text="@string/fa_wait_half"
                            android:textColor="@color/textColorFont"
                            android:textSize="@dimen/text_size_v_small" />

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text="@string/duration"
                            android:textColor="@color/textColorHint"
                            android:textSize="@dimen/text_size_small" />

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_v_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFace="fa"
                            android:layout_marginEnd="@dimen/list_top_padding"
                            android:layout_marginRight="@dimen/list_top_padding"
                            android:text="@string/fa_calender"
                            android:textColor="@color/textColorFont"
                            android:textSize="@dimen/text_size_v_small" />

                        <com.pws.pateast.widget.FTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_condensed"
                            android:text="@string/applied_on"
                            android:textColor="@color/textColorHint"
                            android:textSize="@dimen/text_size_small" />

                        <com.pws.pateast.widget.FTextView
                            android:id="@+id/tv_applied_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_sans_serif_medium"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_v_small" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_content"
                android:layout_marginTop="@dimen/list_top_padding"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:background="@color/md_grey_300" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_leave_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/list_bottom_padding"
                    android:layout_marginTop="@dimen/list_top_padding"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_options"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_28"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_marginStart="@dimen/size_6"
            android:background="@drawable/bottom_round_button_bg"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_options_approve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_light"
                android:gravity="center"
                android:text="@string/menu_approve"
                android:textColor="@color/teacher_class_schedule_form_green"
                android:textSize="@dimen/text_size_v_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_options_reject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_light"
                android:gravity="center"
                android:text="@string/menu_reject"
                android:textColor="@color/student_form_color_red"
                android:textSize="@dimen/text_size_v_small" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>