<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:paddingBottom="@dimen/form_item_label_padding"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/form_item_label_padding"
    android:textDirection="locale">

    <com.pws.pateast.widget.FTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_marginStart="@dimen/size_4"
        android:fontFamily="@string/font_sans_serif_light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/size_4"
        android:paddingTop="@dimen/size_4"
        android:text="8:00 - 9:00 PM"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_v_small"
        app:layout_widthPercent="42%" />

    <com.pws.pateast.widget.FTextView
        android:id="@+id/tv_leave_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawablePadding="@dimen/form_item_label_padding_top"
        android:fontFamily="@string/font_sans_serif_light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingBottom="@dimen/size_4"
        android:paddingTop="@dimen/size_4"
        android:text="jonathan Swift"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_v_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_below="@+id/tv_leave_status"
        android:layout_marginTop="@dimen/form_item_margin_top"
        android:background="@color/md_grey_200" />

</android.support.percent.PercentRelativeLayout>