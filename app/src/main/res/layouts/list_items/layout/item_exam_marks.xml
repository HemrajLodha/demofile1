<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_marks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingEnd="@dimen/list_right_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingStart="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_top_padding"
        android:weightSum="2">

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:fontFamily="@string/font_sans_serif_medium"
            android:gravity="left|start"
            android:text="English"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_exam_marks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:fontFamily="@string/font_sans_serif_medium"
            android:gravity="center"
            android:text="Marks/Grade"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</android.support.v7.widget.CardView>