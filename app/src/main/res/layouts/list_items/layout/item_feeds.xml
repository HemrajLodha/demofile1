<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/list_top_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/list_right_padding"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/size_16"
            app:layout_constraintBottom_toTopOf="@id/container_feed_media"
            app:layout_constraintEnd_toStartOf="@id/img_options"
            app:layout_constraintStart_toStartOf="@id/line1"
            app:layout_constraintTop_toTopOf="parent">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_16"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_medium"
                android:textStyle="bold"
                app:fontFace="app" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_feed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_16"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_v_small"
                android:textStyle="bold"
                app:fontFace="app" />
        </LinearLayout>

        <com.pws.pateast.widget.FTextView
            android:id="@+id/img_options"
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_24"
            android:layout_marginRight="@dimen/list_right_padding"
            android:gravity="center"
            android:text="@string/fa_trash"
            android:textSize="@dimen/text_size_v_large"
            app:fontFace="fa"
            app:layout_constraintBottom_toTopOf="@id/container_feed_media"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/layout_user"
            app:layout_constraintTop_toTopOf="parent" />

        <im.ene.toro.widget.Container
            android:id="@+id/container_feed_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_8"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_profile">

        </im.ene.toro.widget.Container>

        <RelativeLayout
            android:id="@+id/layout_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_16"
            android:layout_marginTop="@dimen/size_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_feed_media">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/img_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_heart_o"
                    android:textSize="@dimen/text_size_v_large"
                    app:fontFace="fa" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small"
                    app:fontFace="app" />
            </LinearLayout>

            <com.pws.pateast.fragment.feeds.indicator.OverflowPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_right_padding"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="vertical"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small"
            app:fontFace="app"
            app:layout_constraintBottom_toTopOf="@+id/layout_rejection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_action" />

        <LinearLayout
            android:id="@+id/layout_rejection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/list_right_padding"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/md_grey_300" />

            <com.pws.pateast.widget.FTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:text="@string/label_leave_info_reject_reason"
                android:textColor="@color/colorAccentTeacher"
                android:textSize="@dimen/text_size_v_small" />


            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_reject_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_small" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>