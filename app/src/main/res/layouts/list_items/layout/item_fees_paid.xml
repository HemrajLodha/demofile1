<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/size_4"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_2"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/size_16"
        android:paddingVertical="@dimen/size_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_fee_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryParent"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/label_installment"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_installment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/label_amount_paid"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_amount_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/label_submission_date"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_submission_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/label_payment_status"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@color/md_green_700"
                    android:textSize="@dimen/text_size_v_small" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/btn_download_challan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/shape_chip_deselected"
                android:text="@string/label_download_challan"
                android:textSize="@dimen/text_size_v_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/btn_download_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:background="@drawable/shape_chip_deselected"
                android:text="@string/label_download_invoice"
                android:textSize="@dimen/text_size_v_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/btn_send_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:background="@drawable/shape_chip_deselected"
                android:text="@string/label_send_invoice"
                android:textSize="@dimen/text_size_v_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/btn_send_challan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:background="@drawable/shape_chip_deselected"
                android:text="@string/label_send_challan"
                android:textSize="@dimen/text_size_v_small" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>