<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/size_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingStart="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingEnd="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_top_padding">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</android.support.v7.widget.CardView>