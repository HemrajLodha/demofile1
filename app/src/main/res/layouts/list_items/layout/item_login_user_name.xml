<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_sans_serif_condensed"
        android:gravity="center"
        android:padding="@dimen/size_16"
        android:text="@string/get_started"
        android:textColor="@color/colorPrimaryParent"
        android:textSize="@dimen/text_size_large" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <com.pws.pateast.widget.FATextView
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:gravity="center"
            android:text="@string/fa_envelope"
            android:textColor="@color/colorLoginBar"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:fontFamily="@string/font_sans_serif_condensed"
            android:hint="@string/username"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/size_30"
            android:paddingRight="@dimen/size_30"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <com.pws.pateast.widget.FATextView
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:gravity="center"
            android:text="@string/fa_key"
            android:textColor="@color/colorLoginBar"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:fontFamily="@string/font_sans_serif_condensed"
            android:hint="@string/password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/size_30"
            android:paddingRight="@dimen/size_30"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            style="@style/LoginButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="@string/login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_forgot_password"
            style="@style/LoginButtonStyleDark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/forgot_password" />
    </LinearLayout>
</LinearLayout>