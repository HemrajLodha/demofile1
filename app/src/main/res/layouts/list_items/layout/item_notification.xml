<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/list_top_padding"
        android:paddingEnd="@dimen/list_right_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingStart="@dimen/list_left_padding"
        android:paddingTop="@dimen/list_top_padding">

        <com.pws.pateast.widget.RectangleLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            app:ratio="1">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dashboard_exam_syllabus"
                android:tint="?attr/colorPrimary"
                app:civ_border_color="@color/student_form_color_purple"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/size_2" />
        </com.pws.pateast.widget.RectangleLinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_item_label_padding"
            android:layout_marginStart="@dimen/form_item_label_padding"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Message From Hell"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_item_label_padding_top"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Hello All, This is a test message from the hell of world."
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>