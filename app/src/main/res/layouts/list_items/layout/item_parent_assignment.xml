<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_4"
    app:cardElevation="0dp">


    <LinearLayout
        android:id="@+id/layout_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_bottom_padding"
        android:layout_marginEnd="@dimen/list_right_padding"
        android:layout_marginLeft="@dimen/list_left_padding"
        android:layout_marginRight="@dimen/list_right_padding"
        android:layout_marginStart="@dimen/list_left_padding"
        android:layout_marginTop="@dimen/list_top_padding"
        android:layout_toLeftOf="@+id/img_download"
        android:layout_toStartOf="@+id/img_download"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_assignment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Chapter 1"
                android:textColor="@color/student_form_color_yellow"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FATextView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginEnd="@dimen/list_top_padding"
                android:layout_marginRight="@dimen/list_top_padding"
                android:gravity="center"
                android:text="@string/fa_book"
                android:textColor="@color/student_form_color_red"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="Math"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FATextView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginEnd="@dimen/list_top_padding"
                android:layout_marginRight="@dimen/list_top_padding"
                android:gravity="center"
                android:text="@string/fa_clock_o"
                android:textColor="@color/student_form_color_red"
                android:textSize="@dimen/text_size_small" />


            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:text="12-9-2017 - 12-9-2017"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginEnd="@dimen/list_top_padding"
                android:layout_marginRight="@dimen/list_top_padding"
                android:gravity="center"
                android:padding="@dimen/size_2"
                android:src="@drawable/ic_badge_256"
                android:tint="@color/student_form_color_red" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="Good"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/img_download"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/list_bottom_padding"
        android:layout_marginEnd="@dimen/list_right_padding"
        android:layout_marginRight="@dimen/list_right_padding"
        android:src="@drawable/ic_attachment"
        app:fab_colorNormal="@color/student_form_color_red"
        app:fab_colorPressed="@color/student_form_color_red"
        app:fab_colorRipple="@color/student_form_color_dark_red"
        app:fab_progress_backgroundColor="@color/colorPrimaryParent"
        app:fab_progress_color="@color/colorPrimaryDarkParent"
        app:fab_progress_max="100"
        app:fab_showShadow="false"
        app:fab_size="mini" />

</android.support.v7.widget.CardView>