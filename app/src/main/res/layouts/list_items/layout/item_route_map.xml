<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/size_3"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/layout_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_download"
        android:layout_toStartOf="@+id/img_download"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingTop="@dimen/list_top_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_route_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="?attr/colorAccent"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.MDITextView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginRight="@dimen/list_top_padding"
                android:gravity="center"
                android:text="@string/mdi_bus_school"
                android:textColor="@color/textColorFont"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:text="@string/label_vehicle_number"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_vehicle_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pws.pateast.widget.MDITextView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginRight="@dimen/list_top_padding"
                android:gravity="center"
                android:text="@string/mdi_worker"
                android:textColor="@color/textColorFont"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:text="@string/label_helper_name"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_helper_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>