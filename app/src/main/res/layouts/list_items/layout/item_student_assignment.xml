<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/size_3"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_bottom_padding"
            android:paddingLeft="@dimen/list_left_padding"
            android:paddingRight="@dimen/list_right_padding"
            android:paddingTop="@dimen/list_top_padding">

            <TextView
                android:id="@+id/tv_assignment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="@string/classes"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="@string/subject"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="@string/start_date"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="@string/end_date"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:text="@string/file"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_light"
                    android:maxLines="1"
                    android:text="File Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>
        </LinearLayout>


        <com.pws.pateast.widget.DownloaderIconView
            android:id="@+id/img_download"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_alignBottom="@+id/layout_desc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>