<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_bottom_padding"
            android:paddingEnd="@dimen/list_right_padding"
            android:paddingLeft="@dimen/list_left_padding"
            android:paddingRight="@dimen/list_right_padding"
            android:paddingStart="@dimen/list_left_padding"
            android:paddingTop="@dimen/list_top_padding">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thoery(Hindi)"
                android:textColor="@color/teacher_class_schedule_form_blue"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_8"
                    android:layout_marginRight="@dimen/size_8"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_8"
                        android:text="@string/fa_calender"
                        android:textColor="@color/student_form_color_yellow"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_exam_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="12-09-2017"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="right|end|center_vertical"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:text="@string/total_marks"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_max_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="100"
                        android:textColor="@color/student_form_color_red"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_8"
                    android:layout_marginRight="@dimen/size_8"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FATextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_8"
                        android:text="@string/fa_clock_o"
                        android:textColor="@color/student_form_color_yellow"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_exam_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="9.00 AM to 12.00 AM"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="right|end|center_vertical"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:text="@string/min_marks"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_min_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:text="100"
                        android:textColor="@color/student_form_color_red"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_marginStart="@dimen/size_6"
            android:background="@drawable/bottom_round_button_bg"
            android:fontFamily="@string/font_sans_serif_condensed">

            <LinearLayout
                android:id="@+id/layout_syllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center"
                    android:src="@drawable/dashboard_exam_syllabus"
                    android:tint="?attr/colorPrimary" />

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_28"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginStart="@dimen/size_10"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:gravity="center"
                    android:text="@string/view_syllabus"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/text_size_v_small" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>