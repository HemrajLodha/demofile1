<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_bottom_padding"
            android:layout_marginEnd="@dimen/list_right_padding"
            android:layout_marginLeft="@dimen/list_left_padding"
            android:layout_marginRight="@dimen/list_right_padding"
            android:layout_marginStart="@dimen/list_left_padding"
            android:layout_marginTop="@dimen/list_top_padding"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_right_padding"
                    android:layout_marginRight="@dimen/list_right_padding"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="ABCD"
                    android:textColor="@color/md_light_green_700"
                    android:textSize="@dimen/text_size_v_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/shape_padding"
                        android:layout_marginRight="@dimen/shape_padding"
                        android:text="@string/fa_clock"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small"
                        app:fontFace="fa" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_v_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/form_item_label_padding_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/list_right_padding"
                    android:layout_marginRight="@dimen/list_right_padding">

                    <com.pws.pateast.widget.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_condensed"
                        android:text="@string/class_teacher"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small" />

                    <com.pws.pateast.widget.FTextView
                        android:id="@+id/tv_class_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_sans_serif_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginTop="@dimen/form_item_label_padding_top"
                android:orientation="horizontal">

                <com.pws.pateast.widget.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:text="@string/subject"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/form_item_label_padding_top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_28"
                    android:layout_height="@dimen/size_28"
                    android:fontFamily="@string/font_sans_serif_condensed"
                    android:src="@drawable/ic_students"
                    android:text="@string/subject"
                    android:textSize="@dimen/text_size_small" />

                <com.pws.pateast.widget.FTextView
                    android:id="@+id/tv_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@string/font_sans_serif_medium"
                    android:text="25"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_v_medium" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_options"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_28"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_marginLeft="@dimen/size_6"
            android:layout_marginRight="@dimen/size_6"
            android:layout_marginStart="@dimen/size_6"
            android:background="@drawable/bottom_round_button_bg"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_assignment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="@string/menu_assignment"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_v_small"
                app:fontFace="fa" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@drawable/divider_white" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_attendance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="@string/menu_classs_attendance"
                android:textColor="@color/parent_theme_blue"
                android:textSize="@dimen/text_size_v_small"
                app:fontFace="fa" />

            <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@drawable/divider_white" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/tv_daily_report"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_medium"
                android:gravity="center"
                android:text="@string/menu_daily_report"
                android:textColor="@color/colorPrimaryStudent"
                android:textSize="@dimen/text_size_v_small"
                app:fontFace="fa" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>