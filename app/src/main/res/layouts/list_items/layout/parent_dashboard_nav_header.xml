<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale">

    <RelativeLayout
        android:id="@+id/group_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.pws.pateast.widget.ProfileImageView
            android:id="@+id/tv_profile_image"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:layout_centerVertical="true"
            android:src="@drawable/avatar1"
            app:civ_border_color="?attr/colorPrimary"
            app:civ_border_width="@dimen/size_2" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_item_margin_top"
            android:layout_marginStart="@dimen/form_item_margin_top"
            android:layout_toEndOf="@+id/tv_profile_image"
            android:layout_toRightOf="@+id/tv_profile_image"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="@string/not_available"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_profile_name"
            android:layout_alignStart="@+id/tv_profile_name"
            android:layout_below="@+id/tv_profile_name"
            android:layout_marginTop="@dimen/form_item_label_padding_top"
            android:background="@drawable/chip_bg_asset_parent"
            android:fontFamily="@string/font_sans_serif_light"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/not_available"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/text_size_small" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_profile_contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_student_name"
            android:layout_alignStart="@+id/tv_student_name"
            android:layout_below="@+id/tv_student_name"
            android:layout_marginTop="@dimen/form_item_label_padding_top"
            android:drawableLeft="@drawable/ic_action_phone"
            android:drawablePadding="@dimen/form_item_label_padding_top"
            android:drawableStart="@drawable/ic_action_phone"
            android:fontFamily="@string/font_sans_serif_light"
            android:gravity="center_vertical"
            android:text="@string/not_available"
            android:textColor="@color/textColor" />

        <com.pws.pateast.widget.FTextView
            android:id="@+id/tv_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_profile_contact_no"
            android:layout_alignStart="@+id/tv_profile_contact_no"
            android:layout_below="@+id/tv_profile_contact_no"
            android:layout_marginTop="@dimen/form_item_label_padding_top"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="@dimen/form_item_label_padding_top"
            android:drawableStart="@drawable/ic_action_email"
            android:fontFamily="@string/font_sans_serif_light"
            android:gravity="center_vertical"
            android:text="@string/not_available"
            android:textColor="@color/textColor" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4"
        android:layout_below="@+id/group_view"
        android:background="@color/md_grey_200" />

</RelativeLayout>