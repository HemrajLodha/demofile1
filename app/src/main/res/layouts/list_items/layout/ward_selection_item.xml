<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_4"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingEnd="@dimen/list_right_padding"
        android:paddingLeft="@dimen/list_left_padding"
        android:paddingRight="@dimen/list_right_padding"
        android:paddingStart="@dimen/list_left_padding"
        android:paddingTop="@dimen/list_top_padding">

        <com.pws.pateast.widget.RectangleLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:ratio="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ward_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar1"
                app:civ_border_color="@color/colorAccentParent"
                app:civ_border_width="@dimen/size_2" />
        </com.pws.pateast.widget.RectangleLinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/form_item_margin_top"
            android:layout_marginStart="@dimen/form_item_margin_top"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <com.pws.pateast.widget.FTextView
                android:id="@+id/ward_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_sans_serif_medium"
                android:textStyle="bold"
                android:text="Alex Johnson"
                android:textColor="@color/colorPrimaryParent"
                android:textSize="@dimen/text_size_v_medium" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/ward_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:drawableLeft="@drawable/ic_class"
                android:drawablePadding="@dimen/size_8"
                android:drawableStart="@drawable/ic_class"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:text="12th B"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@+id/ward_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:drawableLeft="@drawable/ic_school"
                android:drawablePadding="@dimen/size_8"
                android:drawableStart="@drawable/ic_school"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:gravity="center_vertical"
                android:text="DPS Jaipur"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_v_small" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
