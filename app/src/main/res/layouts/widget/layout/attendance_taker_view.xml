<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:textDirection="locale"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/button_v_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/present"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_margin="@dimen/form_item_label_padding"
            android:background="@drawable/round_blank_green"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="P"
            android:textColor="@color/md_green_800"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/leave"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_margin="@dimen/form_item_label_padding"
            android:background="@drawable/round_blank_red"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="L"
            android:textColor="@color/md_red_800"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/absent"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_margin="@dimen/form_item_label_padding"
            android:background="@drawable/round_blank_yellow"
            android:fontFamily="@string/font_sans_serif_medium"
            android:text="A"
            android:textColor="@color/md_yellow_800"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>

</LinearLayout>