<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16"
        android:paddingTop="@dimen/list_top_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.pws.pateast.widget.FTextView
                android:id="@android:id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_sans_serif_condensed"
                android:textAllCaps="true"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/text_size_small" />

            <com.pws.pateast.widget.FTextView
                android:id="@android:id/icon"
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_28"
                android:gravity="top|end"
                android:textColor="@color/textColorFont"
                android:textSize="@dimen/text_size_large"
                android:visibility="invisible" />

        </LinearLayout>

        <com.pws.pateast.widget.FTextView
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_sans_serif_medium"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_v_medium" />

    </LinearLayout>

</android.support.v7.widget.CardView>