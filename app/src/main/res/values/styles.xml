<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:fontFamily">@string/font_sans_serif_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorLogin</item>
        <item name="colorPrimaryDark">@color/colorLoginDark</item>
        <item name="colorAccent">@color/colorLoginDark</item>
    </style>


    <style name="ParentTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryParent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkParent</item>
        <item name="colorAccent">@color/colorAccentParent</item>
    </style>

    <style name="DriverTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDriver</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDriver</item>
        <item name="colorAccent">@color/colorAccentDriver</item>
    </style>

    <style name="StudentTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryStudent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkStudent</item>
        <item name="colorAccent">@color/colorAccentStudent</item>
    </style>

    <style name="TeacherTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryTeacher</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTeacher</item>
        <item name="colorAccent">@color/colorAccentTeacher</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppCompatDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">@dimen/text_size_v_small</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColorHint</item>
        <item name="colorControlNormal">@color/textColorHint</item>
        <item name="colorControlActivated">@color/textColor</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_bg_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="MaterialButtonStyleYellow" parent="MaterialButtonStyle">
        <item name="android:background">@drawable/button_bg_orange</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorLogin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="LoginButtonStyleDark" parent="LoginButtonStyle">
        <item name="android:background">@color/colorLoginDark</item>
        <item name="android:textSize">@dimen/text_size_v_small</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:fontFamily">@font/proxima_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="NavigationText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="CropTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabMinWidth">@dimen/size_72</item>
        <item name="rtl_tabMaxWidth">@dimen/size_264</item>
        <item name="rtl_tabIndicatorColor">@color/white</item>
        <item name="rtl_tabIndicatorHeight">@dimen/size_2</item>
        <item name="rtl_tabPaddingStart">@dimen/size_12</item>
        <item name="rtl_tabPaddingEnd">@dimen/size_12</item>
        <item name="rtl_tabBackground">?attr/selectableItemBackground</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayoutTab</item>
        <item name="rtl_tabSelectedTextColor">@color/white</item>
    </style>

    <style name="rtl_RecyclerTabLayoutTab">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RecyclerTabLayoutTab">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CollapsedTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_sans_serif_medium</item>
    </style>

    <style name="ExpandedTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0dp</item>
    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="DatePickerThemeStudent" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryStudent</item>
    </style>

    <style name="DatePickerThemeParent" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryParent</item>
    </style>

    <style name="DatePickerThemeTeacher" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryTeacher</item>
    </style>

    <style name="DatePickerThemeDriver" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDriver</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CustomTextAppearance">
        <item name="android:typeface">serif</item>
    </style>

    <style name="MarkerText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
</resources>
